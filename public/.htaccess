DirectorySlash Off

RewriteEngine On

# Remove trailing slashes (301 redirect /about/ → /about)
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Redirect old .html URLs to clean URLs (/about.html → /about)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# Serve folder/index.html for clean URLs (/about → about/index.html)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1/index.html -f
RewriteRule ^(.+)$ $1/index.html [L]
